    {{! icon }}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!-- LINK BOOTSTRP -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="overflow-x-hidden">
    <!-- navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-dark"
    >
      <div class="container-fluid">
          <a class="navbar-brand" href=""><img src="https://dumbways.id/assets/images/brandred.png" style="height: 30px"  alt=""></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Project</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonial</a>
            </li>
          </ul>
          {{#if user }}
          <form class="d-flex gap-2" action="/logout" method="post">
          <h4 style="color:white;">Welcome {{user.name}}</h4>
            <button class="btn btn-danger" type="submit">Logout</button>
          </form>
          {{else}}
          <div class="m-2">
            <a href="/register" class="btn btn-danger">Register</a>
            <a href="/login"  class="btn btn-danger">Login</a>
          </div>
          {{/if }}
        </div>
      </div>
    </nav>
    {{! navbar end }}

    {{#if user }}
    
    <div class="form-container">
      <h2 class="form-title">ADD MY PROJECT</h2>
      <form action="/add-project" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="project_ame">Project Name</label>
          <input
            type="text"
            name="project_name"
            id="Name"
            required
            class="form-control"
          />
        </div>

        <div class="row">
          <div class="col">
            <label for="startDate">Start Date</label>
            <input
              type="date"
              name="start_date"
              id="startDate"
              required
              class="form-control"
            />
          </div>
          <div class="col">
            <label for="endDate">End Date</label>
            <input
              type="date"
              name="end_date"
              id="endDate"
              required
              class="form-control"
            />
          </div>
        </div>

        <div class="mb-3">
          <label for="description">Description</label>
          <textarea
            name="description"
            id="description"
            rows="3"
            class="form-control"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="technologies">Technologies</label>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="JavaScript"
              class="form-check-input"
              id="js"
            />
            <label class="form-check-label" for="js">
                <i class="fa-brands fa-js"></i>
              JavaScript
            </label>
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="ReactJS"
              class="form-check-input"
              id="python"
            />
            <label class="form-check-label" for="python">
              <i class="fa-brands fa-react"></i>
              ReactJs
            </label>
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="Java"
              class="form-check-input"
              id="java"
            />
            <label class="form-check-label" for="java">
              <i class="fa-brands fa-java"></i>
              Java
            </label>
          </div>
        </div>

        <div class="mb-3">
          <label for="uploadImage">Upload Image</label>
          <input
            type="file"
            name="image"
            id="uploadImage"
            class="form-control"
          />
        </div>
        <button type="submit" class="btn btn-danger">add project</button>
      </form>
    </div>
      {{/if }}

<div class="row p-3">
  {{#each projects }}
  <div class="col-md-4">
    <div class="card mb-4">
     <img src="{{ image }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{ project_name }} | {{#if author}}{{author}}{{else}}Unknown User{{/if}}</h5>

    <div class="d-flex gap-2">
    <h6 class="card-subtitle mb-2 text-muted">{{get_full_time createdAt}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">{{ get_distance_time createdAt }}</h6>
    </div>

    <p class="card-text">{{ description }} 
      <a href="/detail-project/{{id}}">readmore &raquo;</a></p>
    <h6 class="card-subtitle mb-2 text-muted">Technologies</h6>

    <div class="d-flex gap-2 fs-2">
    <p><i class="fa-brands fa-js"></i></p>
    <p><i class="fa-brands fa-react"></i></p>
    <p><i class="fa-brands fa-java"></i></p>
    </div>

    <div class="d-flex justify-content-center gap-2">
      <form method="post" action="/edit-project/{{id}}">
        <button class="but btn btn-danger">edit</button>
      </form>
      <form method="post" action="/delete-project/{{id}}" class="d-inline">
    <button class="but btn btn-danger">delete</button>
      </form>
    </div>

    </div>
    </div>
  </div>
  {{/each }}
</div>
