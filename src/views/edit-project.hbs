  <div class="container my-5">
    <h1 class="text-center">EDIT PROJECT</h1>
    <form action="/edit-project/{{project.id}}" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="">Project Name</label>
        <input type="text" name="project_name" class="form-control" value="{{project.project_name}}" required />
      </div>
      <div class="row">
        <div class="col">
        <label for="">startDate</label>
        <input type="date" name="start_date" class="form-control" value="{{project.start_date}}" required />
        </div>
        <div class="col">
        <label for="">EndDate</label>
        <input type="date" name="end_date" class="form-control" value="{{project.end_date}}" required />
      </div>
      <div class="mb-3">
        <label for="">Description</label>
        <textarea name="description" class="form-control">{{project.description}}</textarea>
      </div>
        <div class="form-group">
          <label for="technologies">Technologies</label>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="JavaScript"
              class="form-check-input"
              id="js"
            />
            <label class="form-check-label" for="js">
                <i class="fa-brands fa-js"></i>
              JavaScript
            </label>
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="ReactJS"
              class="form-check-input"
              id="python"
            />
            <label class="form-check-label" for="python">
              <i class="fa-brands fa-react"></i>
              ReactJs
            </label>
          </div>
          <div class="form-check">
            <input
              type="checkbox"
              name="technologies"
              value="Java"
              class="form-check-input"
              id="java"
            />
            <label class="form-check-label" for="java">
              <i class="fa-brands fa-java"></i>
              Java
            </label>
          </div>
        </div>
      <div class="container">
      <button type="submit" class="btn btn-danger btn-sm ">Update Project</button>
      </div>
    </form>
  </div>


      <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
